/* points/index.wxss */

.points-container {
  background: linear-gradient(180deg, #fef5f0 0%, #f8f9fa 300rpx);
  min-height: 100vh;
  padding: 30rpx;
}

/* 余额卡片 */
.balance-card {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8f65 100%);
  color: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 12rpx 40rpx rgba(255, 107, 53, 0.4);
}

.balance-card::before {
  content: '';
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
}

.balance-card::after {
  content: '';
  position: absolute;
  top: -80rpx;
  left: -80rpx;
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.balance-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.balance-title {
  font-size: 32rpx;
  font-weight: 600;
  opacity: 0.9;
}

.balance-refresh {
  padding: 10rpx;
}

.refresh-icon {
  font-size: 32rpx;
  transition: transform 0.5s ease;
}

.refresh-icon.rotating {
  animation: rotate 1s linear infinite;
}

.balance-main {
  text-align: center;
  margin-bottom: 40rpx;
}

.balance-number {
  font-size: 96rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  font-family: 'DIN Alternate', 'PingFang SC', sans-serif;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.balance-label {
  font-size: 32rpx;
  opacity: 0.8;
  margin-bottom: 12rpx;
}

.balance-value {
  font-size: 28rpx;
  opacity: 0.8;
  background: rgba(255, 255, 255, 0.15);
  padding: 10rpx 20rpx;
  border-radius: 14rpx;
  display: inline-block;
  font-weight: 500;
}

/* 统计信息 */
.balance-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  font-family: 'DIN Alternate', 'PingFang SC', sans-serif;
}

.stat-label {
  font-size: 28rpx;
  opacity: 0.8;
  font-weight: 500;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 积分价值总结区域 */
.points-value-summary {
  margin-top: 30rpx;
  margin-bottom: 0;
  padding: 24rpx 20rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(248, 249, 250, 0.95) 100%);
  border-radius: 0 0 24rpx 24rpx;
  backdrop-filter: blur(25rpx);
  border-top: 2rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 -6rpx 25rpx rgba(0, 0, 0, 0.08);
}

.summary-title {
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.value-items {
  display: flex;
  justify-content: space-around;
}

.value-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.value-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
}

.value-item:nth-child(1) .value-icon {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #ffffff;
  box-shadow: 0 3rpx 8rpx rgba(82, 196, 26, 0.3);
}

.value-item:nth-child(2) .value-icon {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: #ffffff;
  box-shadow: 0 3rpx 8rpx rgba(24, 144, 255, 0.3);
}

.value-item:nth-child(3) .value-icon {
  background: linear-gradient(135deg, #fa8c16 0%, #ffa940 100%);
  color: #ffffff;
  box-shadow: 0 3rpx 8rpx rgba(250, 140, 22, 0.3);
}

.value-text {
  font-size: 26rpx;
  color: #333;
  text-align: center;
  line-height: 1.3;
  font-weight: 500;
}

.guide-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.guide-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.guide-item:nth-child(1) .guide-icon {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.guide-item:nth-child(2) .guide-icon {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.guide-item:nth-child(3) .guide-icon {
  background: linear-gradient(135deg, #fa8c16 0%, #ffa940 100%);
  box-shadow: 0 4rpx 12rpx rgba(250, 140, 22, 0.3);
}

/* 添加动画效果 */
.points-guide {
  animation: slideUpFade 0.6s ease-out 0.5s both;
}

.guide-item {
  animation: bounceIn 0.6s ease-out;
}

.guide-item:nth-child(1) {
  animation-delay: 0.6s;
}

.guide-item:nth-child(2) {
  animation-delay: 0.7s;
}

.guide-item:nth-child(3) {
  animation-delay: 0.8s;
}

@keyframes slideUpFade {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.8);
  }
  60% {
    opacity: 1;
    transform: scale(1.05);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.guide-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 1.4;
  font-weight: 500;
}

/* 积分服务区域 */
.services-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.service-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.service-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.service-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

.services-grid {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.service-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.service-card:active {
  transform: scale(0.96);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.mall-card {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(255, 143, 101, 0.05) 100%);
  border: 2rpx solid rgba(255, 107, 53, 0.2);
}

.rules-card {
  background: linear-gradient(135deg, rgba(25, 137, 250, 0.1) 0%, rgba(64, 169, 255, 0.05) 100%);
  border: 2rpx solid rgba(25, 137, 250, 0.2);
}

.card-icon {
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 12rpx;
}

.card-content {
  text-align: center;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.card-status {
  font-size: 20rpx;
  color: #ff6b35;
  background: rgba(255, 107, 53, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.card-arrow {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 20rpx;
  color: #ccc;
}

.usage-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: rgba(25, 137, 250, 0.05);
  border-radius: 12rpx;
  border: 1rpx dashed rgba(25, 137, 250, 0.3);
}

.tip-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #1989fa;
  font-weight: 500;
  line-height: 1.4;
  text-align: center;
}

.action-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 16rpx;
  padding: 28rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(20rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
}

.action-item:active {
  transform: scale(0.96);
  background: rgba(255, 255, 255, 0.35);
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.12);
}


/* 筛选区域 */
.filter-section {
  margin-bottom: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.filter-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 20rpx;
}

.filter-tabs {
  display: flex;
  background: rgba(248, 249, 250, 0.8);
  border-radius: 12rpx;
  padding: 6rpx;
  backdrop-filter: blur(5rpx);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 12rpx;
  font-size: 30rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  color: #666;
}

.filter-tab.active {
  background: #1989fa;
  color: #ffffff;
  font-weight: 600;
}

/* 记录列表 */
.records-section {
  margin-bottom: 30rpx;
}

.record-item {
  margin-bottom: 16rpx;
  padding: 30rpx;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(15rpx);
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.record-item:active {
  background: #f8f9fa;
  transform: scale(0.98);
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.record-source {
  display: flex;
  align-items: center;
}

.source-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.source-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #222;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-content {
  margin-bottom: 16rpx;
}

.record-desc {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.record-details {
  font-size: 24rpx;
  color: #999;
}

.record-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.points-change {
  font-size: 36rpx;
  font-weight: 700;
  font-family: 'DIN Alternate', 'PingFang SC', sans-serif;
}

.points-change.positive {
  color: #52c41a;
}

.points-change.negative {
  color: #ff4d4f;
}

.balance-after {
  font-size: 24rpx;
  color: #999;
}

/* 过期信息 */
.expiry-info {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background: #fff7e6;
  border-radius: 8rpx;
  border-left: 4rpx solid #faad14;
}

.expiry-text {
  font-size: 24rpx;
  color: #d46b08;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
}

.load-more-btn {
  background: #f8f9fa;
  color: #666;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.load-more-btn:disabled {
  color: #ccc;
}

.no-more {
  text-align: center;
  padding: 30rpx 0;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  text-align: center;
  padding: 80rpx 30rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
  line-height: 1.4;
}

/* 加载状态 */
.loading-container {
  text-align: center;
  padding: 80rpx 30rpx;
}

.loading-icon {
  font-size: 48rpx;
  margin-bottom: 20rpx;
  animation: rotate 1s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
