.rewards-coming-soon {
  text-align: center;
  padding: 80rpx 40rpx;
}

.coming-soon-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.8;
}

.coming-soon-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 16rpx;
  letter-spacing: -0.5rpx;
}

.coming-soon-desc {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 40rpx;
