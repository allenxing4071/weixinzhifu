  border: 1rpx solid rgba(148, 163, 184, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.analytics-card:active {
  transform: scale(0.98);
}

.analytics-title {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 600;
  margin-bottom: 16rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.analytics-value {
  font-size: 64rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 8rpx;
  font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
  letter-spacing: -1rpx;
}

.analytics-label {
  font-size: 22rpx;
  color: #94a3b8;
  font-weight: 500;
}

/* Merchant Analytics */
.merchant-analytics {
  margin-top: 40rpx;
}

.merchant-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24rpx;
  text-align: center;
}

.premium-merchant-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(148, 163, 184, 0.1);
}

.premium-merchant-item:last-child {
  border-bottom: none;
}

.merchant-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  border-radius: 50%;
  border: 1rpx solid rgba(148, 163, 184, 0.2);
}

.merchant-details {
  flex: 1;
  margin-right: 20rpx;
}

.merchant-name {
  font-size: 30rpx;
  color: #1e293b;
  font-weight: 600;
  margin-bottom: 6rpx;
  letter-spacing: -0.2rpx;
}

.merchant-category {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

.merchant-stats {
  text-align: right;
}

.stat-row {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 4rpx;
  font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
}

.stat-text {
  font-size: 20rpx;
  color: #94a3b8;
  font-weight: 600;
  text-transform: uppercase;
