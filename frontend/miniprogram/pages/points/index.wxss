.service-card:active {
  transform: scale(0.96);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.mall-card {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(255, 143, 101, 0.05) 100%);
  border: 2rpx solid rgba(255, 107, 53, 0.2);
}

.rules-card {
  background: linear-gradient(135deg, rgba(25, 137, 250, 0.1) 0%, rgba(64, 169, 255, 0.05) 100%);
  border: 2rpx solid rgba(25, 137, 250, 0.2);
}

.card-icon {
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 12rpx;
}

.card-content {
  text-align: center;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.card-status {
  font-size: 20rpx;
  color: #ff6b35;
  background: rgba(255, 107, 53, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.card-arrow {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 20rpx;
  color: #ccc;
}

.usage-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: rgba(25, 137, 250, 0.05);
  border-radius: 12rpx;
  border: 1rpx dashed rgba(25, 137, 250, 0.3);
}

.tip-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #1989fa;
  font-weight: 500;
  line-height: 1.4;
  text-align: center;
}

.action-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 16rpx;
  padding: 28rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(20rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
}

.action-item:active {
  transform: scale(0.96);
  background: rgba(255, 255, 255, 0.35);
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.12);
}


/* 筛选区域 */
.filter-section {
  margin-bottom: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.filter-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 20rpx;
}

.filter-tabs {
  display: flex;
  background: rgba(248, 249, 250, 0.8);
  border-radius: 12rpx;
  padding: 6rpx;
  backdrop-filter: blur(5rpx);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 12rpx;
  font-size: 30rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  color: #666;
}

.filter-tab.active {
  background: #1989fa;
  color: #ffffff;
  font-weight: 600;
}

/* 记录列表 */
.records-section {
  margin-bottom: 30rpx;
}

.record-item {
  margin-bottom: 16rpx;
  padding: 30rpx;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(15rpx);
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.record-item:active {
  background: #f8f9fa;
  transform: scale(0.98);
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.record-source {
  display: flex;
  align-items: center;
}

.source-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.source-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #222;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-content {
  margin-bottom: 16rpx;
}

.record-desc {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.record-details {
  font-size: 24rpx;
  color: #999;
}

.record-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.points-change {
  font-size: 36rpx;
  font-weight: 700;
  font-family: 'DIN Alternate', 'PingFang SC', sans-serif;
}

.points-change.positive {
  color: #52c41a;
}

.points-change.negative {
  color: #ff4d4f;
}

.balance-after {
  font-size: 24rpx;
  color: #999;
}

/* 过期信息 */
.expiry-info {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background: #fff7e6;
  border-radius: 8rpx;
  border-left: 4rpx solid #faad14;
}

.expiry-text {
  font-size: 24rpx;
  color: #d46b08;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
}

.load-more-btn {
  background: #f8f9fa;
  color: #666;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.load-more-btn:disabled {
  color: #ccc;
}

.no-more {
  text-align: center;
  padding: 30rpx 0;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  text-align: center;
  padding: 80rpx 30rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
  line-height: 1.4;
}

/* 加载状态 */
.loading-container {
  text-align: center;
  padding: 80rpx 30rpx;
}

.loading-icon {
  font-size: 48rpx;
  margin-bottom: 20rpx;
  animation: rotate 1s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* Premium Animation Effects */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.premium-panel {
  animation: slideInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.premium-balance-header {
  animation: scaleIn 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.mall-card {
  animation: slideInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.2s both;
}

.premium-tab-navigation {
  animation: slideInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.4s both;
}

/* Mall Entrance Section */
.mall-entrance-section {
  margin: 0 20rpx 30rpx 20rpx;
}

.mall-card {
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(148, 163, 184, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.mall-card:active {
  transform: scale(0.98);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.08);
}

.mall-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.mall-content {
  flex: 1;
}

.mall-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
  letter-spacing: -0.5rpx;
}

.mall-subtitle {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
}

.mall-status {
  display: flex;
  align-items: center;
}

.status-badge {
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  color: #ffffff;
  font-size: 22rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  margin-right: 12rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.status-arrow {
  font-size: 24rpx;
  color: #94a3b8;
}

/* Premium Tab Navigation */
.premium-tab-navigation {
  margin: 0 20rpx 30rpx 20rpx;
}

.tab-selector {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 8rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 4rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(148, 163, 184, 0.1);
}

.premium-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 16rpx;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  min-height: 120rpx;
}

.premium-tab.active {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3), 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
  transform: translateY(-2rpx);
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
}

.premium-tab.active .tab-icon {
  transform: scale(1.1);
}

.tab-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #64748b;
  transition: all 0.3s ease;
  text-align: center;
  letter-spacing: 0.2rpx;
}

.premium-tab.active .tab-text {
  color: #ffffff;
  font-weight: 700;
}

/* Premium Content Area */
.premium-content {
  margin: 0 20rpx;
  padding-bottom: 100rpx;
}

.premium-panel {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(148, 163, 184, 0.1);
  min-height: fit-content;
}

/* Section Headers */
.section-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 12rpx;
  letter-spacing: -0.8rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
  letter-spacing: 0.2rpx;
}

/* Overview Section */
.summary-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.summary-card {
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
