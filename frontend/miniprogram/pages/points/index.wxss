/* Premium Points Page - International Design */

.points-premium-container {
  background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 50%, #e2e8f0 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

/* Premium Balance Header */
.premium-balance-header {
  position: relative;
  background: linear-gradient(135deg, #1e293b 0%, #334155 50%, #475569 100%);
  color: #ffffff;
  margin: 40rpx 20rpx 30rpx 20rpx;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(30, 41, 59, 0.3), 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.header-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(147, 51, 234, 0.05) 100%);
  pointer-events: none;
}

.header-gradient::before {
  content: '';
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  border-radius: 50%;
}

.balance-content {
  position: relative;
  z-index: 2;
  padding: 60rpx 40rpx 50rpx;
  text-align: center;
}

.balance-card::before {
  content: '';
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
}

.balance-card::after {
  content: '';
  position: absolute;
  top: -80rpx;
  left: -80rpx;
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.balance-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.balance-title {
  font-size: 32rpx;
  font-weight: 600;
  opacity: 0.9;
}

.balance-refresh {
  padding: 10rpx;
}

.refresh-icon {
  font-size: 32rpx;
  transition: transform 0.5s ease;
}

.refresh-icon.rotating {
  animation: rotate 1s linear infinite;
}

.balance-main {
  text-align: center;
  margin-bottom: 40rpx;
}

.balance-title {
  font-size: 32rpx;
  font-weight: 500;
  opacity: 0.8;
  margin-bottom: 20rpx;
  letter-spacing: 0.5rpx;
}

.balance-main-display {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 16rpx;
}


.balance-number {
  font-size: 120rpx;
  font-weight: 800;
  letter-spacing: -2rpx;
  font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.balance-subtitle {
  font-size: 28rpx;
  font-weight: 400;
  opacity: 0.7;
  margin-bottom: 40rpx;
  letter-spacing: 0.3rpx;
}

.balance-label {
  font-size: 32rpx;
  opacity: 0.8;
  margin-bottom: 12rpx;
}

.balance-value {
  font-size: 28rpx;
  opacity: 0.8;
  background: rgba(255, 255, 255, 0.15);
  padding: 10rpx 20rpx;
  border-radius: 14rpx;
  display: inline-block;
  font-weight: 500;
}

/* Premium Stats Grid */
.premium-stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-top: 40rpx;
  align-items: stretch;
}

.premium-stat-card {
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 140rpx;
  box-sizing: border-box;
}

.premium-stat-card:active {
  transform: scale(0.96);
  background: rgba(255, 255, 255, 0.18);
}

.stat-icon {
  font-size: 32rpx;
  margin-bottom: 10rpx;
  opacity: 0.8;
  line-height: 1;
}

.stat-number {
  font-size: 56rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
  font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
  letter-spacing: -1rpx;
  line-height: 1.1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.7;
  font-weight: 500;
  letter-spacing: 0.2rpx;
  line-height: 1.2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 积分价值总结区域 */
.points-value-summary {
  margin-top: 30rpx;
  margin-bottom: 0;
  padding: 24rpx 20rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(248, 249, 250, 0.95) 100%);
  border-radius: 0 0 24rpx 24rpx;
  backdrop-filter: blur(25rpx);
  border-top: 2rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 -6rpx 25rpx rgba(0, 0, 0, 0.08);
}

.summary-title {
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.value-items {
  display: flex;
  justify-content: space-around;
}

.value-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.value-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
}

.value-item:nth-child(1) .value-icon {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #ffffff;
  box-shadow: 0 3rpx 8rpx rgba(82, 196, 26, 0.3);
}

.value-item:nth-child(2) .value-icon {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: #ffffff;
  box-shadow: 0 3rpx 8rpx rgba(24, 144, 255, 0.3);
}

.value-item:nth-child(3) .value-icon {
  background: linear-gradient(135deg, #fa8c16 0%, #ffa940 100%);
  color: #ffffff;
  box-shadow: 0 3rpx 8rpx rgba(250, 140, 22, 0.3);
}

.value-text {
  font-size: 26rpx;
  color: #333;
  text-align: center;
  line-height: 1.3;
  font-weight: 500;
}

.guide-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.guide-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.guide-item:nth-child(1) .guide-icon {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.guide-item:nth-child(2) .guide-icon {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.guide-item:nth-child(3) .guide-icon {
  background: linear-gradient(135deg, #fa8c16 0%, #ffa940 100%);
  box-shadow: 0 4rpx 12rpx rgba(250, 140, 22, 0.3);
}

/* 添加动画效果 */
.points-guide {
  animation: slideUpFade 0.6s ease-out 0.5s both;
}

.guide-item {
  animation: bounceIn 0.6s ease-out;
}

.guide-item:nth-child(1) {
  animation-delay: 0.6s;
}

.guide-item:nth-child(2) {
  animation-delay: 0.7s;
}

.guide-item:nth-child(3) {
  animation-delay: 0.8s;
}

@keyframes slideUpFade {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.8);
  }
  60% {
    opacity: 1;
    transform: scale(1.05);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.guide-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 1.4;
  font-weight: 500;
}

/* 积分服务区域 */
.services-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.service-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.service-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.service-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

.services-grid {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.service-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
