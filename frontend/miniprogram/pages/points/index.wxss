}

.no-merchant-data {
  text-align: center;
  padding: 60rpx 20rpx;
}

.no-data-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.no-data-text {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
}

/* Loading State */
.loading {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #64748b;
  font-size: 32rpx;
  font-weight: 500;
}

/* Global Responsive Design */
@media (max-width: 750rpx) {
  .balance-number {
    font-size: 100rpx;
  }
  
  .card-number {
    font-size: 56rpx;
  }
  
  .premium-stats-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 16rpx;
  }
  
  .summary-cards {
    grid-template-columns: 1fr;
  }
}

/* Performance Optimizations */
.premium-tab,
.premium-stat-card,
.summary-card,
.analytics-card,
.action-btn {
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
}

/* Accessibility */
.premium-tab:focus,
.action-btn:focus,
.mall-card:focus {
  outline: 3rpx solid rgba(59, 130, 246, 0.5);
  outline-offset: 2rpx;
}
