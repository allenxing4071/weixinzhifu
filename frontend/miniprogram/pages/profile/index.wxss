/* profile/index.wxss */

.profile-container {
  background: linear-gradient(180deg, #667eea 0%, #f5f5f5 300rpx);
  min-height: 100vh;
  padding: 30rpx;
}

/* 用户信息卡片 */
.user-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.15);
}

.user-content {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  font-family: 'Courier New', monospace;
}

.join-time {
  font-size: 24rpx;
  color: #666;
}

.edit-profile {
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.edit-icon {
  font-size: 32rpx;
  color: #666;
}

/* 未登录状态 */
.login-card {
  text-align: center;
  padding: 40rpx 0;
}

.login-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.login-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.login-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  padding: 20rpx 60rpx;
}

/* 积分概览 */
.points-overview {
  margin-bottom: 30rpx;
}

.overview-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 24rpx;
}

.points-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.points-item {
  background: #f8f9fa;
  padding: 30rpx 20rpx;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.points-item:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.item-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff6b35;
  margin-bottom: 8rpx;
  font-family: 'DIN Alternate', 'PingFang SC', sans-serif;
}

.item-label {
  font-size: 24rpx;
  color: #666;
}

/* 菜单组 */
.menu-section {
  margin-bottom: 30rpx;
}

.menu-group {
  margin-bottom: 20rpx;
}

.group-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
  padding: 0 16rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f9fa;
}

.item-icon {
  font-size: 36rpx;
  margin-right: 24rpx;
  width: 60rpx;
  text-align: center;
}

.item-content {
  flex: 1;
}

.item-title {
  font-size: 30rpx;
  color: #222;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
}

.item-badge {
  background: #ff6b35;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  margin-right: 16rpx;
}

.item-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 支付记录特殊样式 */
.payment-history-item {
  background: linear-gradient(135deg, rgba(25, 137, 250, 0.05) 0%, rgba(25, 137, 250, 0.02) 100%);
  border-left: 4rpx solid #1989fa;
}

.payment-icon {
  background: linear-gradient(135deg, #1989fa 0%, #40a9ff 100%);
  color: #ffffff;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);
}

.payment-stats {
  margin-right: 16rpx;
}

.stats-text {
  font-size: 24rpx;
  color: #1989fa;
  font-weight: 600;
  background: rgba(25, 137, 250, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 消费记录专区样式 */
.consumption-section {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.05) 0%, rgba(255, 107, 53, 0.02) 100%);
  border: 2rpx solid rgba(255, 107, 53, 0.2);
  position: relative;
  overflow: hidden;
}

.consumption-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8f65 100%);
}

.consumption-header {
  text-align: center;
  padding: 30rpx 20rpx 20rpx;
  border-bottom: 1rpx solid rgba(255, 107, 53, 0.1);
}

.section-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.consumption-stats {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
}

.stat-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  text-align: center;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 107, 53, 0.1);
}

.stat-card:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.2);
}

.stat-icon {
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.stat-info {
  
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff6b35;
  margin-bottom: 6rpx;
  font-family: 'DIN Alternate', 'PingFang SC', sans-serif;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

.consumption-actions {
  padding: 0 30rpx 30rpx;
}

.consumption-btn {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8f65 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  width: 100%;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s ease;
}

.consumption-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.4);
}

.btn-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.btn-text {
  flex: 1;
  text-align: center;
}

.btn-arrow {
  font-size: 24rpx;
  margin-left: 12rpx;
}

/* 支付记录列表 */
.payment-history-list {
  margin-top: 30rpx;
  border-top: 2rpx solid rgba(255, 107, 53, 0.1);
  animation: slideDown 0.3s ease-out;
}

.history-header {
  padding: 20rpx 30rpx;
  background: rgba(255, 107, 53, 0.05);
  border-radius: 12rpx 12rpx 0 0;
}

.header-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
}

.header-subtitle {
  font-size: 22rpx;
  color: #666;
}

.history-loading,
.history-empty {
  text-align: center;
  padding: 60rpx 30rpx;
}

.loading-icon,
.empty-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.loading-text,
.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.history-records {
  padding: 0 30rpx;
}

.payment-record {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
}

.payment-record:active {
  background: #f8f9fa;
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.record-merchant {
  display: flex;
  align-items: center;
}

.merchant-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.merchant-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.record-time {
  font-size: 22rpx;
  color: #999;
}

.record-content {
  margin-bottom: 16rpx;
}

.record-desc {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 6rpx;
}

.record-order {
  font-size: 20rpx;
  color: #999;
  font-family: 'Courier New', monospace;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.payment-amount,
.points-reward {
  text-align: center;
  flex: 1;
}

.amount-label,
.reward-label {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.amount-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  font-family: 'DIN Alternate', 'PingFang SC', sans-serif;
}

.reward-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #52c41a;
  font-family: 'DIN Alternate', 'PingFang SC', sans-serif;
}

.record-status {
  text-align: right;
}

.status-badge {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.status-badge.success {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.status-badge.pending {
  background: rgba(250, 140, 22, 0.1);
  color: #fa8c16;
}

.status-badge.failed {
  background: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
}

.view-more {
  text-align: center;
  padding: 20rpx 30rpx;
}

.more-btn {
  background: rgba(255, 107, 53, 0.1);
  color: #ff6b35;
  border: 2rpx solid rgba(255, 107, 53, 0.3);
  border-radius: 12rpx;
  font-size: 26rpx;
  padding: 16rpx 40rpx;
}

.more-btn:active {
  background: rgba(255, 107, 53, 0.15);
}

@keyframes slideDown {
  0% {
    opacity: 0;
    max-height: 0;
    transform: translateY(-20rpx);
  }
  100% {
    opacity: 1;
    max-height: 2000rpx;
    transform: translateY(0);
  }
}

/* 退出登录 */
.logout-section {
  margin-top: 40rpx;
}

.logout-btn {
  background: transparent;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
  border-radius: 16rpx;
  font-size: 30rpx;
  height: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.logout-btn:active {
  background: rgba(255, 77, 79, 0.1);
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 0;
}

.version-text {
  font-size: 24rpx;
  color: #ccc;
}
