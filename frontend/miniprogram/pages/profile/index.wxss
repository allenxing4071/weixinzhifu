  top: 12rpx;
  right: 12rpx;
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: #ffffff;
  font-size: 18rpx;
  font-weight: 600;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* Analytics Cards */
.analytics-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.analytics-card {
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  border: 1rpx solid rgba(148, 163, 184, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.analytics-card:active {
  transform: scale(0.98);
}

.analytics-title {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 600;
  margin-bottom: 16rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.analytics-value {
  font-size: 56rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 8rpx;
  font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
  letter-spacing: -1rpx;
}

.analytics-label {
  font-size: 22rpx;
  color: #94a3b8;
  font-weight: 500;
}

/* Quick Actions */
.quick-actions {
  margin-top: 40rpx;
}

.action-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24rpx;
  text-align: center;
}

.action-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.action-btn {
  background: linear-gradient(135deg, #f1f5f9 0%, #ffffff 100%);
  border-radius: 16rpx;
  padding: 28rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid rgba(148, 163, 184, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-btn:active {
  transform: scale(0.96);
  background: linear-gradient(135deg, #e2e8f0 0%, #f8fafc 100%);
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.btn-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
  text-align: center;
}

/* Premium Record List */
.premium-record-list {
  margin-top: 30rpx;
}

.record-header {
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(148, 163, 184, 0.1);
  margin-bottom: 24rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

.premium-record {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(148, 163, 184, 0.1);
  transition: all 0.3s ease;
}

.premium-record:last-child {
  border-bottom: none;
}

.premium-record:active {
  background: rgba(248, 250, 252, 0.8);
  transform: scale(0.99);
}

.record-icon-wrapper {
  margin-right: 20rpx;
}

.record-type-icon {
  font-size: 32rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  border-radius: 50%;
  border: 1rpx solid rgba(148, 163, 184, 0.2);
}

.record-content {
  flex: 1;
  margin-right: 20rpx;
}

.record-title {
  font-size: 30rpx;
  color: #1e293b;
  font-weight: 600;
  margin-bottom: 6rpx;
  letter-spacing: -0.2rpx;
}

.record-desc {
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 4rpx;
  font-weight: 500;
}

.record-timestamp {
  font-size: 22rpx;
  color: #94a3b8;
  font-weight: 500;
}

.record-value {
  text-align: right;
}

.points-amount {
  font-size: 32rpx;
  font-weight: 800;
  margin-bottom: 4rpx;
  font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
  letter-spacing: -0.5rpx;
}

.points-amount.positive {
  color: #059669;
}

.points-label {
  font-size: 20rpx;
  color: #94a3b8;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* Loading and Empty States */
.history-loading,
.history-empty {
  text-align: center;
  padding: 60rpx 30rpx;
}

.loading-icon,
.empty-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.loading-text,
.empty-text {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #94a3b8;
  line-height: 1.4;
  font-weight: 500;
}

/* View More */
.view-more {
  text-align: center;
  padding: 30rpx 0;
}

.more-btn {
  background: linear-gradient(135deg, #f1f5f9 0%, #ffffff 100%);
  color: #64748b;
  border: 1rpx solid rgba(148, 163, 184, 0.2);
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  padding: 20rpx 40rpx;
  transition: all 0.3s ease;
}

.more-btn:active {
  background: linear-gradient(135deg, #e2e8f0 0%, #f8fafc 100%);
  transform: scale(0.98);
}

/* Version Info */
.version-info {
  text-align: center;
  padding: 40rpx 0;
}

.version-text {
  font-size: 24rpx;
  color: #94a3b8;
  font-weight: 500;
}

/* Animations */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.premium-panel {
  animation: slideInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.premium-profile-header {
  animation: slideInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Performance Optimizations */
.premium-stat-card,
.summary-card,
.analytics-card,
.feature-card,
.action-btn {
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
}

/* Accessibility */
.premium-stat-card:focus,
.feature-card:focus,
.action-btn:focus {
  outline: 3rpx solid rgba(59, 130, 246, 0.5);
  outline-offset: 2rpx;
}
