  font-size: 26rpx;
  padding: 16rpx 40rpx;
}

.more-btn:active {
  background: rgba(255, 107, 53, 0.15);
}

@keyframes slideDown {
  0% {
    opacity: 0;
    max-height: 0;
    transform: translateY(-20rpx);
  }
  100% {
    opacity: 1;
    max-height: 2000rpx;
    transform: translateY(0);
