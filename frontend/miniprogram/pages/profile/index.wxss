/* Premium Profile Page - International Design */

.profile-premium-container {
  background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 50%, #e2e8f0 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

/* Premium Profile Header */
.premium-profile-header {
  position: relative;
  background: linear-gradient(135deg, #1e293b 0%, #334155 50%, #475569 100%);
  color: #ffffff;
  margin: 40rpx 20rpx 30rpx 20rpx;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(30, 41, 59, 0.3), 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.header-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(147, 51, 234, 0.05) 100%);
  pointer-events: none;
}

.header-gradient::before {
  content: '';
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  border-radius: 50%;
}

.profile-content {
  position: relative;
  z-index: 2;
  padding: 60rpx 40rpx 50rpx;
}

.user-info-section {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
}

.avatar-status {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 32rpx;
  height: 32rpx;
  background: #10b981;
  border-radius: 50%;
  border: 3rpx solid #ffffff;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: 800;
  margin-bottom: 8rpx;
  letter-spacing: -0.5rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.user-level {
  font-size: 28rpx;
  font-weight: 600;
  opacity: 0.9;
  margin-bottom: 6rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.user-subtitle {
  font-size: 24rpx;
  opacity: 0.7;
  font-weight: 500;
}

.edit-action {
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.12);
  border-radius: 50%;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.edit-icon {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 用户信息卡片 */
.user-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(255, 107, 53, 0.15);
}

.user-content {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
}

.user-details {
