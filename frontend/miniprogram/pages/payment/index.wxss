/* payment/index.wxss - 完全仿微信支付界面+数字键盘 */

.payment-container {
  background: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏（完全仿微信） */
.navbar {
  background: #ffffff;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 40rpx;
  color: #000000;
  font-weight: 300;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #000000;
}

.nav-placeholder {
  width: 60rpx;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  overflow-y: auto;
}

/* 收款方信息（完全仿微信） */
.payee-section {
  background: #ffffff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.payee-label {
  font-size: 28rpx;
  color: #888888;
  margin-bottom: 30rpx;
}

.payee-info {
  display: flex;
  align-items: center;
}

.payee-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 30rpx;
  background: #f0f0f0;
}

.payee-details {
  flex: 1;
}

.payee-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #000000;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.payee-subtitle {
  font-size: 28rpx;
  color: #888888;
}

/* 金额显示区（完全仿微信） */
.amount-display-section {
  background: #ffffff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.amount-label {
  font-size: 32rpx;
  color: #000000;
  margin-bottom: 30rpx;
  font-weight: 500;
}

.amount-display {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.currency-symbol {
  font-size: 80rpx;
  font-weight: 300;
  color: #000000;
  margin-right: 8rpx;
}

.amount-value {
  font-size: 80rpx;
  font-weight: 300;
  color: #000000;
  flex: 1;
  min-height: 90rpx;
  line-height: 90rpx;
}

/* 积分规则提示（巧妙融入） */
.points-rule-hint {
  font-size: 24rpx;
  color: #ff6b35;
  text-align: center;
  margin-top: 16rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 107, 53, 0.1);
  border-radius: 8rpx;
  animation: fadeIn 0.5s ease-out;
}

/* 添加备注（完全仿微信） */
.remark-section {
  background: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.remark-label {
  font-size: 32rpx;
  color: #000000;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.remark-input {
  font-size: 32rpx;
  color: #000000;
  width: 100%;
  border: none;
  outline: none;
  background: transparent;
}

/* 积分规则展示区（替代备注，吸引用户关注） */
.points-rules-section {
  background: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-top: 2rpx solid #ff6b35;
  position: relative;
}

.rules-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6b35;
  margin-bottom: 24rpx;
  text-align: center;
}

.rule-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.rule-item:last-child {
  border-bottom: none;
}

.rule-item.highlight {
  background: rgba(255, 107, 53, 0.05);
  border-radius: 8rpx;
  padding: 16rpx 12rpx;
  border: 1rpx solid rgba(255, 107, 53, 0.2);
}

.rule-item.special {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(255, 143, 101, 0.05) 100%);
  border-radius: 8rpx;
  padding: 16rpx 12rpx;
  border: 2rpx solid #ff6b35;
  animation: specialGlow 2s ease-in-out infinite;
}

.rule-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  width: 40rpx;
  text-align: center;
}

.rule-item.highlight .rule-icon {
  color: #ff6b35;
}

.rule-item.special .rule-icon {
  color: #ff6b35;
}

.rule-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.rule-item.highlight .rule-text {
  font-weight: 600;
  color: #ff6b35;
}

.rule-item.special .rule-text {
  font-weight: 600;
}

.points-highlight {
  color: #ff6b35;
  font-weight: 700;
  font-size: 32rpx;
}

@keyframes specialGlow {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(255, 107, 53, 0.3);
  }
  50% {
    box-shadow: 0 0 0 4rpx rgba(255, 107, 53, 0.1);
  }
}

/* 数字键盘容器（完全仿微信） */
.keyboard-container {
  background: #d1d1d6;
  padding: 2rpx;
  display: flex;
  flex-direction: column;
}

.keyboard-grid {
  flex: 1;
}

.key-row {
  display: flex;
  margin-bottom: 2rpx;
}

.number-key {
  flex: 1;
  height: 110rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 300;
  color: #000000;
  margin-right: 2rpx;
  transition: background-color 0.1s ease;
}

.number-key:last-child {
  margin-right: 0;
}

.number-key:active {
  background: #e0e0e0;
}

.empty-key {
  background: #d1d1d6;
}

.delete-key {
  background: #ffffff;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 2rpx;
}

.delete-icon {
  font-size: 36rpx;
  color: #000000;
  font-weight: 300;
}

.delete-key:active {
  background: #e0e0e0;
}

/* 付款按钮（微信绿色） */
.pay-button-container {
  height: 110rpx;
}

.pay-button {
  width: 100%;
  height: 100%;
  border: none;
  font-size: 36rpx;
  font-weight: 500;
  color: #ffffff;
  transition: all 0.1s ease;
}

.pay-button.enabled {
  background: #07c160;
}

.pay-button.disabled {
  background: #c0c0c0;
}

.pay-button.enabled:active {
  background: #06ad56;
}

/* 积分到账动画（支付成功后的丝滑引导） */
.points-animation-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8f65 100%);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.5s ease-out;
}

.points-animation-content {
  text-align: center;
  color: #ffffff;
  position: relative;
}

.points-icon-large {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  animation: bounce 0.8s ease-out;
}

.points-animation-text {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  animation: slideUp 0.6s ease-out 0.2s both;
}

.points-subtitle {
  font-size: 28rpx;
  opacity: 0.8;
  animation: slideUp 0.6s ease-out 0.4s both;
}

.points-rain {
  position: absolute;
  top: -50rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 300rpx;
  height: 200rpx;
  pointer-events: none;
}

.rain-particle {
  position: absolute;
  font-size: 32rpx;
  color: #FFE58F;
  font-weight: bold;
  animation: rainFall 1.5s ease-out infinite;
}

.rain-particle:nth-child(1) { left: 10%; animation-delay: 0s; }
.rain-particle:nth-child(2) { left: 20%; animation-delay: 0.1s; }
.rain-particle:nth-child(3) { left: 30%; animation-delay: 0.2s; }
.rain-particle:nth-child(4) { left: 40%; animation-delay: 0.3s; }
.rain-particle:nth-child(5) { left: 60%; animation-delay: 0.4s; }
.rain-particle:nth-child(6) { left: 70%; animation-delay: 0.5s; }
.rain-particle:nth-child(7) { left: 80%; animation-delay: 0.6s; }
.rain-particle:nth-child(8) { left: 90%; animation-delay: 0.7s; }

/* 支付成功弹窗 */
.success-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.success-content {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx 40rpx;
  margin: 60rpx;
  position: relative;
  text-align: center;
  animation: fadeInUp 0.5s ease-out;
}

.success-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  animation: pulse 1s ease-in-out;
}

.success-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 20rpx;
}

.success-amount {
  font-size: 48rpx;
  font-weight: 700;
  color: #52c41a;
  margin-bottom: 30rpx;
  font-family: 'DIN Alternate', 'PingFang SC', sans-serif;
}

.success-points {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8f65 100%);
  color: #ffffff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.success-points .points-label {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.success-points .points-value {
  font-size: 48rpx;
  font-weight: 700;
  font-family: 'DIN Alternate', 'PingFang SC', sans-serif;
}

/* 动画效果 */
@keyframes fadeIn {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-30rpx);
  }
  60% {
    transform: translateY(-15rpx);
  }
}

@keyframes slideUp {
  0% {
    opacity: 0;
    transform: translateY(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes rainFall {
  0% {
    opacity: 0;
    transform: translateY(-20rpx) scale(0);
  }
  20% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  80% {
    opacity: 1;
    transform: translateY(150rpx) scale(1);
  }
  100% {
    opacity: 0;
    transform: translateY(200rpx) scale(0.5);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}
