<cover-view class="tab-bar">
  <cover-view 
    class="tab-bar-border"
  ></cover-view>
  <cover-view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
    <cover-view class="tab-bar-content">
      <cover-view class="tab-bar-icon {{selected === index ? 'icon-selected' : 'icon-normal'}}">
        {{selected === index ? item.selectedIconPath : item.iconPath}}
      </cover-view>
      <cover-view class="tab-bar-text {{selected === index ? 'text-selected' : 'text-normal'}}">
        {{item.text}}
      </cover-view>
    </cover-view>
  </cover-view>
</cover-view>