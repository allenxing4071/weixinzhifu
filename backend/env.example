# 应用配置
NODE_ENV=development
PORT=3000

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=points_app
DB_PASSWORD=your_password
DB_NAME=points_app

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 微信小程序配置
WECHAT_APP_ID=your_app_id
WECHAT_APP_SECRET=your_app_secret
WECHAT_MCH_ID=your_mch_id
WECHAT_API_KEY=your_api_key
WECHAT_NOTIFY_URL=https://api.example.com/api/v1/payments/callback
WECHAT_CERT_PATH=/path/to/cert
WECHAT_TEMPLATE_ID=your_template_id

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 安全配置
ALLOWED_ORIGINS=https://servicewechat.com,https://localhost:3000

# 积分配置
POINTS_RATIO=1
POINTS_EXPIRY_DAYS=365
POINTS_MAX_DAILY=10000
