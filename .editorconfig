# EditorConfig is awesome: https://EditorConfig.org

# 顶级配置文件
root = true

# 所有文件
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown 文件保留尾部空格
[*.md]
trim_trailing_whitespace = false

# JavaScript/TypeScript 文件
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON 文件
[*.json]
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_size = 2

# Shell 脚本
[*.sh]
indent_size = 2

# Python 文件
[*.py]
indent_size = 4

# Makefile 必须使用 tab
[Makefile]
indent_style = tab

# SQL 文件
[*.sql]
indent_size = 2
